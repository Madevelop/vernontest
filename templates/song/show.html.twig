{% extends 'base.html.twig' %}

{% block title %}Song{% endblock %}

{% block body %}
    <h1>Song</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ song.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ song.title }}</td>
            </tr>
            <tr>
                <th>Groupe</th>
                <td>{{ song.groupe }}</td>
            </tr>
            <tr>
                <th>Album</th>
                <td>{{ song.album }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ song.createdAt ? song.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified_at</th>
                <td>{{ song.modifiedAt ? song.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

            <tr>
                <th>Instruments</th>
                <td>
                    {% for instrument in song.instruments %}
                        <p>{{ instrument.title }}</p>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('song_index') }}">back to list</a>

    <a href="{{ path('song_edit', {'id': song.id}) }}">edit</a>

    {{ include('song/_delete_form.html.twig') }}
{% endblock %}
